<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
</head>
<body>
	<link rel="stylesheet" type="text/css" href="css/jquery.dataTables.css">
	<script type="text/javascript" language="javascript" src="//code.jquery.com/jquery-1.11.1.min.js"></script>
	<script type="text/javascript" language="javascript" src="//cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>
<script>
var table = "";
$(document).ready(function() {
    
    init();
    
    $( "#list3" ).dblclick(function() {
    	
	});
    
    $( "#list1" ).dblclick(function() {

  		init1();
	});
    $( "#list2" ).dblclick(function() {

  		init2();
	});


} );


function init() {

}

function init1() {

var selected = [];
 
    table = $("#example").dataTable({
    	"paging":   false,
        "ordering": false,
        "info":     false,
        "processing": false,
        "serverSide": false,
        "ajax": "data/data2.txt",
        "rowCallback": function( row, data, displayIndex ) {
            if ( $.inArray(data.DT_RowId, selected) !== -1 ) {
                $(row).addClass('selected');
            }
        },
    });
 
 
   
     $('#example tbody').on('dblclick', 'tr', function () {
        var id = this.id;
        var index = $.inArray(id, selected);
 
        if ( index === -1 ) {
            selected.push( id );
        } else {
            selected.splice( index, 1 );
        }
         $(this).remove().draw( false );
    } );
   
        
    $('#example tbody').on('click', 'tr', function () {
        var id = this.id;
        var index = $.inArray(id, selected);
 		
        if ( index === -1 ) {
            selected.push( id );
        } else {
            selected.splice( index, 1 );
        }
        $(this).toggleClass('selected');
    } );
    
 }


function init2() {

var selected = [];
 
    table = $("#example").dataTable({
    	"paging":   false,
        "ordering": false,
        "info":     false,
        "processing": false,
        "serverSide": false,
        "ajax": "/gae_bmi",
        "rowCallback": function( row, data, displayIndex ) {
            if ( $.inArray(data.DT_RowId, selected) !== -1 ) {
                $(row).addClass('selected');
            }
        },
    });
 
 
   
     $('#example tbody').on('dblclick', 'tr', function () {
        var id = this.id;
        var index = $.inArray(id, selected);
 
        if ( index === -1 ) {
            selected.push( id );
        } else {
            selected.splice( index, 1 );
        }
         $(this).remove().draw( false );
    } );
   
        
    $('#example tbody').on('click', 'tr', function () {
        var id = this.id;
        var index = $.inArray(id, selected);
 		
        if ( index === -1 ) {
            selected.push( id );
        } else {
            selected.splice( index, 1 );
        }
        $(this).toggleClass('selected');
    } );
    
 }

</script>

<span id="list1">list1</span> <span id="list2">list2</span> <span id="list3">list3</span>
